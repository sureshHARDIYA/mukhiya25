# Security Environment Variables
# Copy this to .env.local and configure with your actual values

# Database Security
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Admin API Security
ADMIN_API_KEY=your_strong_random_admin_api_key_here

# Optional: IP Whitelisting for Admin Access
# Comma-separated list of allowed IPs for admin endpoints
ADMIN_ALLOWED_IPS=127.0.0.1,192.168.1.100

# Optional: CORS Origins
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Optional: IP Whitelist for all requests
# Leave empty to allow all IPs
IP_WHITELIST=

# Optional: Rate Limiting Configuration
RATE_LIMIT_MAX_REQUESTS=30
RATE_LIMIT_WINDOW_MS=60000

# Security Headers
NODE_ENV=production

# Generate strong API key with:
# node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
